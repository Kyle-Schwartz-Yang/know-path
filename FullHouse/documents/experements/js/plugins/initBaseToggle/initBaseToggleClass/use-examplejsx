

// -Хочешь использовать что-то из TabSystem или FilterSystem ?
// - APP.JS (помести этот код в APP.JS)

import { TabSystem } from './tab-system.js';
// import { FilterSystem } from './filter-system.js';

// Инициализация табов
const tabSystem = new TabSystem({
  containerSelector: '#tab-container',
  toggleSelector: '.tab-toggle',
  contentSelector: '.tab-content',
  activeClass: 'active'
});

tabSystem.init();



// // Инициализация фильтров
const filterSystem = new FilterSystem({
  containerSelector: '#filter-container',
  toggleSelector: '.filter-toggle',
  contentSelector: '.filter-item',
  activeClass: 'visible'
});
filterSystem.init();