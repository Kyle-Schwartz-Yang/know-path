  .accordion&attributes(attributes)&attributes(initAcc)&attributes(switchAcc)
    each item in items
      .accordion__item
        button.accordion__title(tabindex="-1" type="button" data-spoller='' class=item.active)
          span=item.title
        .accordion__text
          if item.content
            != formatContent(item.content)
          else if block 
            block
            




