    //- Управления атрибутами при активации
    const initAcc = settingAttr ? settingAttr : {'data-spollers': ''}
    const switchAcc = switchAttrs ? switchAttrs : {'data-one-spoller': ''}

    //- Завернуть каждое предложение в <p></p>
    function formatContent(content) {
      if (typeof content === 'string' && content.includes('.')) {
        return content.split('.')
          .filter(paragraph => paragraph.trim())
          .map(paragraph => `<p>${paragraph.trim()}.</p>`).join('')
      }
      return content
    }
  
